{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "node",
    "incremental": true,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
